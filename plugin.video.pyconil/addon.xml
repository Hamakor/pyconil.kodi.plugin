<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.pyconil" name="PyCon-IL Conference data" version="0.2.0" provider-name="PyCon-IL 2017 Kodi Workshop">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.dateutil" version="2.5.3"/>
    <import addon="script.module.html2text" version="2015.6.21"/>
    <import addon="plugin.video.youtube" version="5.3.12"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Demo Plugin for PyCon-IL Workshop</summary>
    <description lang="en">
      The plugin should allow browsing conference agenda, and playing session videos from previous years.
    </description>
    <disclaimer lang="en"></disclaimer>
    <language>English</language>
    <platform>all</platform>
    <license>MIT</license>
    <forum></forum>
    <website></website>
    <email></email>
    <source>https://github.com/Hamakor/pyconil.kodi.plugin</source>
    <news>v0.2.0  (milestone)
- Support agenda (event/day) menus.
- Different backend, supporting 2017 data.

v0.1.0  (2017-5-29)
- Initial version
</news>
    <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
        <screenshot>resources/screenshot.jpg</screenshot>
    </assets>
  </extension>
</addon>
